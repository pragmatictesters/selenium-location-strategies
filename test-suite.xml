            <class name="com.pragmatictesters.locators.ByClassNameExampleTest"/>
            <class name="com.pragmatictesters.locators.ByCSSExampleTest"/>
            <class name="com.pragmatictesters.locators.ByIDExampleTest"/>
            <class name="com.pragmatictesters.locators.ByLinkTextExampleTest"/>
